    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            // Lấy URL hiện tại
            console.log("eoeoeoeoe");
            var currentUrl = window.location.href;

            // Kiểm tra xem URL có chứa từ khóa tương ứng không và áp dụng lớp active
            if (currentUrl.includes("#home")) {
                $("#home").addClass("active");
            } else if (currentUrl.includes("#customer")) {
                $("#customer").addClass("active");
            }

            $("a").click(function () {
                // Loại bỏ lớp active từ tất cả các thẻ <a>
                $("a").removeClass("active");

                // Thêm lớp active cho thẻ <a> được click
                $(this).addClass("active");
            });
        });


    </script>
    @await RenderSectionAsync("Scripts", required: false)
