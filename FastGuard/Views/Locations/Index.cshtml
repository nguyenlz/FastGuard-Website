@model IEnumerable<Location>

@{
    ViewData["Title"] = "Địa Điểm";
}

<div class="container mt-4">
    <h1>Các Địa Điểm</h1>
    <p>
        <a asp-action="Create" class="btn btn-success">Tạo Địa Điểm Mới</a>
    </p>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th class="col-8">Tên Địa Điểm</th>
                <th class="col-4">Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LocationName)
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.LocationId" class="btn btn-primary">
                                <i class="fas fa-edit"></i> Sửa
                            </a>
                            <a asp-action="Details" asp-route-id="@item.LocationId" class="btn btn-info">
                                <i class="fas fa-info-circle"></i> Chi Tiết
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.LocationId" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Xóa
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>