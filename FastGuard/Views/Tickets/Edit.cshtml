@model FastGuard.Models.Ticket

<h4>Thay đổi thông tin vé</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InvoiceId" />
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" readonly/>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeatNo" class="control-label">Số ghế</label>
                <select asp-for="SeatNo" class="form-control" asp-items="ViewBag.SeatNo"></select>
                <span asp-validation-for="SeatNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PickLocationId1" class="control-label">Điểm đón</label>
                <select asp-for="PickLocationId1" class="form-control" asp-items="ViewBag.PickLocationName1"></select>
                <span asp-validation-for="PickLocationId1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PickLocationId2" class="control-label">Điểm trả</label>
                <select asp-for="PickLocationId2" class="form-control" asp-items="ViewBag.PickLocationName2"></select>
                <span asp-validation-for="PickLocationId2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="RouteId" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="TotalMoney" type="hidden" />
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="BookedTicket">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
