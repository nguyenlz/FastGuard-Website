@model IEnumerable<Coach>

@{
    ViewData["Title"] = "Thông tin xe";
}

<div class="container mt-4">
    <h1>Thông tin xe</h1>
    <p>
        <a asp-action="Create" class="btn btn-success">Thêm mới xe</a>
    </p>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Biển số xe</th>
                <th>Tên nhà cung cấp</th>
                <th>Số lượng khách chở tối đa</th>
                <th>Tình trạng</th>
                <th>Mô tả xe</th>
                <th>Tên tài xế phụ trách</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CoachNo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Supplier)</td>
                    <td>@Html.DisplayFor(modelItem => item.Capacity)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.User.Name)</td>
                    <td>
                        <div class="d-flex gap-2" role="group">
                            <a asp-action="Delete" asp-route-id="@item.CoachId" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Xóa
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.CoachId" class="btn btn-primary">
                                <i class="fas fa-edit"></i> Sửa
                            </a>
                            <a asp-action="Details" asp-route-id="@item.CoachId" class="btn btn-secondary">
                                <i class="fas fa-info-circle"></i> Chi tiết
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>