@model Coach

@{
    ViewData["Title"] = "Xóa Xe";
}



<h3>Bạn có muốn xóa xe này?</h3>
<div>
    <h4>Xe khách</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Biển số xe:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CoachNo)
        </dd>
        <dt class = "col-sm-2">
           Tên nhà cung cấp: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Supplier)
        </dd>
        <dt class = "col-sm-2">
           Số lượng khách chở tối đa: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class = "col-sm-2">
           Tình trạng: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            Mô tả xe: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Tên tài xế phụ trách xe:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CoachId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-info">Trở Về</a>
    </form>
</div>
