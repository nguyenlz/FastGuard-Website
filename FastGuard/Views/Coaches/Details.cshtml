@model Coach

@{
    ViewData["Title"] = "Chi Tiết Xe";
}

<h1>Chi Tiết Xe</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Biển số xe:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CoachNo)
        </dd>
        <dt class = "col-sm-2">
           Tên nhà cung cấp: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Supplier)
        </dd>
        <dt class = "col-sm-2">
          Số lượng khách chở tối đa: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class = "col-sm-2">
           Tình trạng:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            Mô tả xe:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Tên tài xế phụ trách xe:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CoachId" class="btn btn-primary">Sửa</a> |
    <a asp-action="Index" class="btn btn-info">Trở Về</a>
</div>
