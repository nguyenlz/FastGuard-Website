@model PickLocation

@{
    ViewData["Title"] = "Sửa Điểm Đón";
}

<h1>Sửa Điểm Đón</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PickLocationId" />
            <div class="form-group">
                <label asp-for="PickLocationName" class="control-label">Điểm Đón</label>
                <input asp-for="PickLocationName" class="form-control" />
                <span asp-validation-for="PickLocationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationId" class="control-label">Tên Địa Điểm</label>
                <select asp-for="LocationId" class="form-control" asp-items="ViewBag.LocationName"></select>
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" /> | 
                <a asp-action="Index" class="btn btn-info">Trở Về</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
