@model IEnumerable<PickLocation>

@{
    ViewData["Title"] = "Điểm Đón";
}

<div class="container mt-4">
    <h1>Danh Sách Điểm Đón</h1>

    <div class="d-flex gap-3">
        <p>
            <a asp-action="Create" class="btn btn-success">Tạo Điểm Đón Mới</a>
        </p>
        <form asp-action="Index" method="get">
            <div style="width: 400px; display: flex;">
                <input type="search" id="searchbarinput" name="searchbarinput" class="form-control" placeholder="Nhập nội dung tìm kiếm" />
                <button type="submit" class="btn btn-primary" data-mdb-ripple-init>
                    <i class="fas fa-search"></i>
                </button>
                <a asp-action="Index" type="submit" class="btn btn-dark mx-3" data-mdb-ripple-init>
                    <i class="fa-solid fa-arrows-rotate"></i>
                </a>
            </div>

        </form>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th class="col-4">Tên Địa Điểm</th>
                <th class="col-4">Điểm Đón</th>
                <th class="col-4">Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location.LocationName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PickLocationName)
                    </td>
                    <td>
                        <div class="d-flex gap-2" role="group">
                            <a asp-action="Delete" asp-route-id="@item.PickLocationId" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Xóa
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.PickLocationId" class="btn btn-primary">
                                <i class="fas fa-edit"></i> Sửa
                            </a>
                            <a asp-action="Details" asp-route-id="@item.PickLocationId" class="btn btn-secondary">
                                <i class="fas fa-info-circle"></i> Chi tiết
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
