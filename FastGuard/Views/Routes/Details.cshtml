@model Route

@{
    ViewData["Title"] = "Chi Tiết Chuyến Xe";
}

<h1>Thông Tin Chi Tiết</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Ngày Khởi Hành
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class = "col-sm-2">
            Ngày Đến
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class = "col-sm-2">
            Giá Vé
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)VNĐ
        </dd>
        <dt class = "col-sm-2">
            Biển Số Xe
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Coach.CoachNo)
        </dd>
        <dt class = "col-sm-2">
            Điểm Đi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LocationId1Navigation.LocationName)
        </dd>
        <dt class = "col-sm-2">
            Điểm Đến
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LocationId2Navigation.LocationName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.RouteId"class="btn btn-primary">Sửa</a> |
    <a asp-action="Index"class="btn btn-info">Trở Về</a>
</div>
