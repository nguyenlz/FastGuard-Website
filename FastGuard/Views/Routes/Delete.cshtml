@model Route

@{
    ViewData["Title"] = "Xóa Tuyến Xe";
}

<h3 class="text-danger">@ViewData["TicketWithRouteExist"]</h3>
<h3>Bạn Có Chắc Xóa Chuyến Xe Này Chứ?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ngày Khởi Hành
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            Ngày Đến
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            Giá Vé
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)VNĐ
        </dd>
        <dt class="col-sm-2">
            Biển Số Xe
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Coach.CoachNo)
        </dd>
        <dt class="col-sm-2">
            Điểm Đi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LocationId1Navigation.LocationName)
        </dd>
        <dt class="col-sm-2">
            Điểm Đến
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LocationId2Navigation.LocationName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RouteId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-info">Trở Về</a>
    </form>
</div>
