@using Microsoft.AspNetCore.Identity;
@model IdentityRole

@{
    ViewData["Title"] = "Tạo Role";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên role</label>
                <input asp-for="Name" class="form-control" required oninput="setCustomValidity('')" oninvalid="setCustomValidity('Vui lòng nhập tên role')" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value=" Tạo" class="btn btn-primary" id="submit" /> |
                <a asp-action="Index" class="btn btn-info"> Trở Về</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
